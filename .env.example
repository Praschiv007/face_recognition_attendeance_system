# Flask Configuration
FLASK_APP=main.py
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
HOST=0.0.0.0
PORT=5000

# Database Configuration
DATABASE_NAME=attendance.db

# Face Recognition Configuration
# Recognition confidence threshold (lower = stricter matching)
# Values between 0-100, recommended: 60-80
RECOGNITION_CONFIDENCE_THRESHOLD=70

# Minimum face detection size in pixels
MIN_FACE_SIZE=100

# Minimum image resolution in pixels
MIN_IMAGE_WIDTH=200
MIN_IMAGE_HEIGHT=200

# Face encoding image size (used for storing face data)
FACE_ENCODING_WIDTH=200
FACE_ENCODING_HEIGHT=200

# Haar Cascade Configuration
FACE_DETECTION_SCALE_FACTOR=1.1
FACE_DETECTION_MIN_NEIGHBORS=5

# Attendance Records Limit
# Maximum number of records to fetch when no date filter is applied
MAX_RECORDS_LIMIT=50

# Security (Future Enhancement)
# ENABLE_AUTHENTICATION=False
# REQUIRE_HTTPS=True
# SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO
